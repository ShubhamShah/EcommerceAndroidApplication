<resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
        </style>
        <style name="HeadingText" parent="Text">
            <item name="android:gravity">center</item>
            <item name="android:textSize">30sp</item>
            <item name="android:paddingLeft">10dp</item>
            <item name="android:paddingRight">10dp</item>
            <item name="android:paddingTop">10dp</item>
            <item name="android:paddingBottom">10dp</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="ParagraphText" parent="Text">
            <item name="android:textSize">15sp</item>
            <item name="android:paddingBottom">10dp</item>
            <item name="android:paddingLeft">10dp</item>
            <item name="android:paddingRight">5dp</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">#FFFF</item>

        </style>

        <style name="SummaryText" parent="Text">
            <item name="android:textSize">16sp</item>
            <item name="android:paddingBottom">10dp</item>
            <item name="android:textColor">#FFFF</item>
        </style>

        <style name="SummaryTitle" parent="HeadingText">
            <item name="android:textSize">22sp</item>
            <item name="android:paddingLeft">5dp</item>
            <item name="android:paddingBottom">0dp</item>
            <item name="android:gravity">left</item>
            <item name="android:textColor">#FFFF</item>
        </style>

        <style name="DetailsSmallTitle" parent="HeadingText">
            <item name="android:textSize">18sp</item>
            <item name="android:paddingLeft">0dp</item>
            <item name="android:paddingBottom">0dp</item>
            <item name="android:paddingTop">0dp</item>
            <item name="android:gravity">left</item>
        </style>

        <style name="SummaryImage" parent="Image">
            <item name="android:padding">5dp</item>
            <item name="android:layout_width">70dp</item>
            <item name="android:layout_height">70dp</item>
            <item name="android:layout_gravity">center_vertical</item>
        </style>

        <style name="DetailsImage" parent="Image">
            <item name="android:padding">5dp</item>
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:layout_gravity">center</item>
        </style>

        <style name="HorizontalDivider">
            <item name="android:layout_height">2dp</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:background">#BBBBBB</item>
            <item name="android:paddingLeft">5dp</item>
            <item name="android:paddingRight">5dp</item>
            <item name="android:paddingTop">5dp</item>
            <item name="android:paddingBottom">5dp</item>
        </style>

        <style name="Image">image</style>

        <style name="Text">Text</style>





</resources>
